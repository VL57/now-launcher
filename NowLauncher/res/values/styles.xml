<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">

    </style>
    <style name="AppBaseThemeNoTitleBar" parent="android:Theme.Light.NoTitleBar">

    </style>
    <style name="ActivityDialog" parent="android:Theme.Dialog">

    </style>
    <!-- SLIDINGTAB -->
        <!-- @hide -->
        <style name="TextAppearance.SlidingTabNormal" parent="AppBaseThemeNoTitleBar">
            <item name="android:textColor">?android:attr/textColorTertiary</item>
            <item name="android:textSize">28sp</item>
            <item name="android:shadowColor">@android:color/black</item>
            <item name="android:shadowDx">0.0</item>
            <item name="android:shadowDy">1.0</item>
            <item name="android:shadowRadius">5.0</item>
        </style>

        <!-- @hide -->
        <style name="TextAppearance.SlidingTabActive" parent="AppBaseThemeNoTitleBar">
            <item name="android:textColor">@android:color/black</item>
            <item name="android:textSize">28sp</item>
        </style>
</resources>