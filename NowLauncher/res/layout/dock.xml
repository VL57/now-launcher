<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:id="@+id/docklayout">
		        
   	<ImageView
       	android:id="@+id/dockapp1"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:background="@color/white"
       	android:src="@drawable/ic_launcher" />
   	
   	<View
        android:id="@+id/ColorBar1"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dockapp1"
        android:layout_alignTop="@+id/dockapp1"
        android:layout_toRightOf="@+id/dockapp1"
        android:background="@color/green" />
    
   	
    <ImageView
        android:id="@+id/dockapp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dockapp1"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:src="@drawable/ic_launcher" />
   	
    <View
        android:id="@+id/ColorBar2"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dockapp2"
        android:layout_alignTop="@+id/dockapp2"
        android:layout_toRightOf="@+id/dockapp2"
        android:background="@color/red" />
    
    <ImageView
        android:id="@+id/dockapp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dockapp2"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_launcher" />

    
    <View
        android:id="@+id/ColorBar3"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dockapp3"
        android:layout_alignTop="@+id/dockapp3"
        android:layout_toRightOf="@+id/dockapp3"
        android:background="@color/yellow" />

    <ImageView
        android:id="@+id/dockapp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dockapp3"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_launcher" />
    
    <View
        android:id="@+id/ColorBar4"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dockapp4"
        android:layout_alignTop="@+id/dockapp4"
        android:layout_toRightOf="@+id/dockapp4"
        android:background="@color/blue" />

    
</RelativeLayout>